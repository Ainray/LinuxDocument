/etc/samba/smb.conf

[WinApps]
    comment = OsApps
    path =  /home/inray/winsda5/OsInstallNecessary/
    public = no
    browseable = yes
    read only = no
    valid users = inray 
    create mask = 0700
    directory mask = 0700
    max connections = 1
    allow hosts = 192.16.27.212

[share]
    comment = references
    path = /home/inray/refs
    public = no
    browseable = yes
    read only = no
    valid users = inray 
    create mask = 0700
    directory mask = 0700

sudo smbpasswd -a inray
